		<h4>
				<i class="fa fa-upload"></i> {% trans %}Attachments{% endtrans %}
				<button class="btn btn-primary btn-xs" data-toggle="modal" data-target="#PieceJointeModal" style="float:right;">
						<i class="fa fa-plus"></i>
						{% trans %}Add{% endtrans %}
				</button>
		</h4>
		<div class="modal fade" id="PieceJointeModal" tabindex="-1" role="dialog" aria-labelledby="PieceJointeModalLabel" aria-hidden="true">
				<div class="modal-dialog" role="document">
						<div class="modal-content">
								<div class="modal-header">
										<h5 class="modal-title" id="PieceJointeModalLabel"><i class="fa fa-upload"></i> {% trans %}Add attachment{% endtrans %}</h5>
										<button type="button" class="close" data-dismiss="modal" aria-label="Close">
											<span aria-hidden="true">&times;</span>
										</button>
								</div>
								<div class="modal-body">
										{{ form_start(form) }}
										{{ form_errors(form) }}

										<p>
												{% trans %}Attachment{% endtrans %} <i>*</i> :
										</p>
										<p>
												{{ form_widget(form.imageFile) }}
												{{ form_errors(form.imageFile) }}
										</p>
										<br>
										<p>
												{% trans %}Description{% endtrans %} / {% trans %}Comment{% endtrans %}:
										</p>
										<p>
												{{ form_widget(form.commentaire) }}
												{{ form_errors(form.commentaire) }}
										</p>
										<min><i>&nbsp; * {% trans %}Required Field{% endtrans %}</i></min>
								</div>
								<div class="modal-footer">
										<button type="button" class="btn btn-secondary" data-dismiss="modal">{% trans %}Close{% endtrans %}</button>
										<button type="submit" class="btn btn-primary">{% trans %}Save{% endtrans %}</button>
								</div>

										{{ form_end(form) }}
						</div>
				</div>
		</div>
		<table class="table table-striped">
				<tr>
						<th class="table-bg radius-left">{% trans %}Filename{% endtrans %}</th>
						<th class="table-bg">{% trans %}Description{% endtrans %}</th>
						<th class="table-bg">{% trans %}Size{% endtrans %}</th>
						<th class="table-bg">{% trans %}Type{% endtrans %}</th>
						<th class="table-bg">{% trans %}Add the{% endtrans %}</th>
						<th class="table-bg">{% trans %}Added by{% endtrans %}</th>
						<th class="table-bg radius-right">{% trans %}Download{% endtrans %}</th>
				</tr>
				{% for pj in piecesJointes %}
				<tr>
						<td> <a href="{{ vich_uploader_asset(pj, 'imageFile') }}">{{ pj.imageName }}</a> </td>
						<td> {{ pj.commentaire }} </td>
						<td> {{ pj.imageSize }} ko </td>
						<td> {{ pj.imageName|slice(23) }} </td>
						<td> {{ pj.updatedAt|date('d-m-Y h:i') }} </td>
						<td> {{ pj.utilisateur }} </td>
						<td>
								<a href="
										{{ vich_uploader_asset(pj, 'imageFile') }}"
										download="{{ pj.imageName }}">
										{% trans %}Download{% endtrans %}
								</a>
						</td>
				</tr>
				{% endfor %}
		</table>
