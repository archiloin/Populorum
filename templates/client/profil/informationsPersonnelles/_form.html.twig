
	{{ form_start(form) }}
	{{ form_errors(form) }}

	<table class="table table-striped">
			<tr>
					<th class="table-bg radius-left"><i class="fa fa-info"></i>{% trans %}Personal informations{% endtrans %}</th>
					<td class="table-bg radius-right"></td>
			</tr>
			<tr>
					<th> {% trans %}Civility{% endtrans %}:</th>
					<td>
							{{ form_widget(form.civilite, {'attr':{'class':'form-control'}}) }}
							{{ form_errors(form.civilite) }}
					</td>
			</tr>
			<tr>
					<th style="width:20%">{% trans %}Employee ID{% endtrans %}:</th>
					<td>
							{{ form_widget(form.identifiant, {'attr':{'class':'form-control'}}) }}
							{{ form_errors(form.identifiant) }}
					</td>
			</tr>
			<tr>
					<th style="width:20%">{% trans %}Firstname{% endtrans %}:</th>
					<td>
							{{ form_widget(form.firstname, {'attr':{'class':'form-control'}}) }}
							{{ form_errors(form.firstname) }}
					</td>
			</tr>
			<tr>
					<th style="width:20%">{% trans %}Middle name{% endtrans %}:</th>
					<td>
							{{ form_widget(form.middlename, {'attr':{'class':'form-control'}}) }}
							{{ form_errors(form.middlename) }}
					</td>
			</tr>
			<tr>
					<th style="width:20%"> {% trans %}Lastname{% endtrans %}:</th>
					<td>
							{{ form_widget(form.lastname, {'attr':{'class':'form-control'}}) }}
							{{ form_errors(form.lastname) }}
					</td>
			</tr>
			<tr>
					<th>{% trans %}Nickname{% endtrans %}:</th>
					<td>
							{{ form_widget(form.nickname, {'attr':{'class':'form-control'}}) }}
							{{ form_errors(form.nickname) }}
					</td>
			</tr>
			<tr>
					<th>{% trans %}Mug shot{% endtrans %}</th>
					<td>
							{% if profil %}
									{% if profil.identity %}
											{% if profil.identity.imageName %}
													<img
															src="{{ vich_uploader_asset(profil.identity, 'imageFile') }}"
														 	width="100px"
															alt="{% trans %}Mug shot{% endtrans %}"
													/>
											{% else %}
													<img src="{{ asset('images/identite.png') }}"
															 width="100px"
															 alt="{% trans %}Mug shot{% endtrans %}"
													/>
											{% endif %}
									{% else %}
											<img src="{{ asset('images/identite.png') }}"
													 width="100px"
													 alt="{% trans %}Mug shot{% endtrans %}"
											/>
									{% endif %}
							{% else %}
									<img src="{{ asset('images/identite.png') }}"
											 width="100px"
											 alt="{% trans %}Mug shot{% endtrans %}"
									/>
							{% endif %}
							{{ form_widget(form.identity) }}
							{{ form_errors(form.identity) }}
					</td>
			</tr>
			<tr>
					<th>{% trans %}Family situation{% endtrans %}:</th>
					<td>
							{{ form_widget(form.familysituation, {'attr':{'class':'form-control'}}) }}
							{{ form_errors(form.familysituation) }}
					</td>
			</tr>
			<tr>
					<th>{% trans %}Date of birth{% endtrans %}:</th>
					<td>
							{{ form_widget(form.dob, {'attr':{'class':'form-control'}}) }}
							{{ form_errors(form.dob) }}
					</td>
			</tr>
			<tr>
					<th>{% trans %}Place of birth{% endtrans %}:</th>
					<td>
							{{ form_widget(form.birthplace, {'attr':{'class':'form-control'}}) }}
							{{ form_errors(form.birthplace) }}
					</td>
			</tr>
			<tr>
					<th>{% trans %}Social security number{% endtrans %}:</th>
					<td>
							{{ form_widget(form.ssn, {'attr':{'class':'form-control'}}) }}
							{{ form_errors(form.ssn) }}
					</td>
			</tr>
	</table>
	<input type="submit" class="btn btn-primary" value="{% trans %}Save{% endtrans %}" />
	{{ form_end(form) }}

	<script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.6/cropper.min.js"></script>
