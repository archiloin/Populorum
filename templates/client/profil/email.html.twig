{% extends "client/base.html.twig" %}

{% set page_title = 'Change my mail address' %}
{% set menuProfil = 'subdrop' %}
{% set menuUL = 'display:block' %}
{% set menuPasswordProfil = 'subMenuActive' %}

{% block body %}
    <div class="content-page">
        <div class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="breadcrumb-holder">
                            {% if app.user.username == 'test' %}
                                <h1 class="main-title float-left" style="color:red">{% trans %}Demo account mail address cannot be changed{% endtrans %}</h1>
                            {% else %}
                                <h1 class="main-title float-left">{% trans %}Change my mail address{% endtrans %}</h1>
                            {% endif %}
                            <ol class="breadcrumb float-right">
                                <li class="breadcrumb-item">{% trans %}Home{% endtrans %}</li>
                                <li class="breadcrumb-item active">{% trans %}Change my mail address{% endtrans %}</li>
                            </ol>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
                {# Blockquotes #}
                <div class="row clearfix">
                    <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                        <div class="card">
                            <div class="margin-center align-center">
                                {% if app.user.username == 'test' %}
                                    <div class="body mg-bot-3 mg-top-3">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-at"></i></span> {# icône css #}
                                            <div class="form-line">
                                                <span>&nbsp;{% trans %}Mail address{% endtrans %}*</strong>
                                                {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
                                                {{ form_errors(form.email) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <input type="submit" class="btn btn-primary btn-bottom" value="{% trans %}Change my mail address{% endtrans %}" />
                                    </div>
                                {% else %}
                                    {{ form_start(form, { 'action': path('cli_modifier_mdp'), 'attr': { 'class': 'cli_modifier_password' } }) }}
                                    <div class="body mg-bot-3 mg-top-3">
                                        <div class="input-group">
                                            <span class="input-group-addon"><i class="fa fa-at"></i></span> {# icône css #}
                                            <div class="form-line">
                                                <span>&nbsp;{% trans %}Mail{% endtrans %}*</strong>
                                                {{ form_widget(form.email, {'attr':{'class':'form-control'}}) }}
                                                {{ form_errors(form.email) }}
                                            </div>
                                        </div>
                                    </div>
                                    <div>
                                        <input type="submit" class="btn btn-primary btn-bottom" value="{% trans %}Save{% endtrans %}" />
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
