{% extends "client/vitrine/base.html.twig" %}

{% block vitrine %}
{% if is_granted('ROLE_USER') %}
    <meta http-equiv="refresh" content="0;URL={{ path('cli_dashboard') }}">
{% else %}
    {{ form_start(form, {'method': 'post', 'attr': {'novalidate': 'novalidate', 'id': 'inscription'}}) }}
<div class="wow">
    <div class="container">
        <div class="row">
            <div class="wow-logo">
                <a href="{{ path('accueil') }}">
                    <img class="img-responsive img-logo" src="{{ asset('assets/img/logo.jpg') }}" width="33%" height="33%">
                </a>
                <p class="font-3" style="text-align:center">POPULORUM</p>
            </div>
            <div class="font-1 helmet text-center">
                <div class="input-group">
                    <div class="form-line">
                        {{form_start(form)}}
                        {{form_row(form.email)}}
                    </div>
                </div>
                <button class="btn btn-default wow-button" type="submit">{% trans %}Send{% endtrans %}</button>
            {{form_end(form)}}
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
