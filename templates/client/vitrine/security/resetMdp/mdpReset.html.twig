{% extends "client/vitrine/base.html.twig" %}

{% block vitrine %}
{% if is_granted('ROLE_USER') %}
    <meta http-equiv="refresh" content="0;URL={{ path('cli_dashboard') }}">
{% else %}
    {{ form_start(form, {'method': 'post', 'attr': {'novalidate': 'novalidate', 'id': 'inscription'}}) }}
<div class="wow">
    <div class="container">
        <div class="row">
            <div class="wow-logo">
                <a href="{{ path('accueil') }}">
                    <img class="img-responsive img-logo" src="{{ asset('assets/img/logo.jpg') }}" width="33%" height="33%">
                </a>
                <p class="font-3" style="text-align:center">POPULORUM</p>
            </div>
            <div class="font-1 helmet text-center">
                {{form_start(form)}}
                	<b style="color:red">
                      {{form_errors(form.plainPassword.first)}}
                  </b>
                	<ul>
                      <li>
                          <h5> {% trans %}New Password{% endtrans %} : </h5>
                          {{form_widget(form.plainPassword.first)}}
                      </li>
              	      <li>
                          <h5> {% trans %}Password Confirmation{% endtrans %} : </h5>
                          {{form_widget(form.plainPassword.second)}}
                      </li>
                  </ul>
                	<button class="btn btn-primary" style="margin-top:13px" type="submit">{% trans %}Send{% endtrans %}</button>
                {{form_end(form)}}
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}
