
<div id="main">
    {# top bar navigation #}
    <div class="headerbar">
        {# LOGO #}
        <div class="headerbar-left">
            <a href="{{ path('cli_dashboard') }}" class="logo">
                {% if app.user.profil.informationsEntreprise %}
                    {% if app.user.profil.informationsEntreprise.logo %}
                        {% if app.user.profil.informationsEntreprise.logo.imageName %}
                            <img
                                src="{{ vich_uploader_asset(app.user.profil.informationsEntreprise.logo, 'imageFile') }}"
                                alt="{% trans %}Logo{% endtrans %}"
                            />
                        {% else %}
                            <img src="{{ asset('assets/img/logo.jpg') }}"
                                 width="250px"
                                 alt="{% trans %}Logo{% endtrans %}"
                            />
                        {% endif %}
                    {% else %}
                        <img src="{{ asset('assets/img/logo.jpg') }}"
                             width="250px"
                             alt="{% trans %}Logo{% endtrans %}"
                        />
                    {% endif %}
                {% else %}
                    <img src="{{ asset('assets/img/logo.jpg') }}"
                         width="250px"
                         alt="{% trans %}Logo{% endtrans %}"
                    />
                {% endif %}
                <span class="theme-color">
                    {% if app.user.profil.informationsEntreprise.nomEntreprise is defined %}
                        {{ app.user.profil.informationsEntreprise.nomEntreprise|truncate(11, false, '...') }}
                    {% else %}
                        {{ app.user.client.profil.informationsEntreprise.nomEntreprise|truncate(11, false, '...') }}
                    {% endif %}
                </span>
            </a>
        </div>
        <nav class="navbar-custom">
            <ul class="list-inline float-right mb-0">
                {% for locale in locales if locale != app.request.locale %}
                    <li class="list-inline-item">
                        <a href="{{ path('cli_change_locale', {'locale': locale}) }}">
                            <img src="{{ asset('images/locales/'~app.request.locale~'.png') }}" alt="{{ app.request.locale }}">
                        </a>
                    </li>
                {% endfor %}
                <li class="list-inline-item dropdown notif">
                    <a class="nav-link dropdown-toggle arrow-none" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                        <i class="fa fa-fw fa-question-circle"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right dropdown-arrow dropdown-arrow-success dropdown-lg">
                        {# item#}
                        <div class="dropdown-item noti-title">
                            <h5>
                                <small>
                                    {% trans %}Help & Support{% endtrans %}
                                </small>
                            </h5>
                        </div>
                        <hr>
                        <a href="{{ path('cli_report') }}" class="dropdown-item notify-item">
                            <p class="notify-details ml-0">
                                <b>
                                    {% trans %}Contact us ?{% endtrans %}
                                </b>
                            </p>
                        </a>
                    </div>
                </li>
                <li class="list-inline-item dropdown notif">
                    <a class="nav-link dropdown-toggle nav-user" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                        {% if app.user.profil.informationsPersonnelles %}
                            {% if app.user.profil.informationsPersonnelles.identity %}
                                {% if app.user.profil.informationsPersonnelles.identity.imageName %}
                                    <img
                                        src="{{ vich_uploader_asset(app.user.profil.informationsPersonnelles.identity, 'imageFile') }}"
                                        alt="{% trans %}Logo{% endtrans %}"
                                        class="avatar-rounded"
                                    />
                                {% else %}
                                    <img src="{{ asset('assets/img/logo.jpg') }}"
                                         width="250px"
                                         alt="{% trans %}Logo{% endtrans %}"
                                         class="avatar-rounded"
                                    />
                                {% endif %}
                            {% else %}
                                <img src="{{ asset('assets/img/logo.jpg') }}"
                                     width="250px"
                                     alt="{% trans %}Logo{% endtrans %}"
                                     class="avatar-rounded"
                                />
                            {% endif %}
                        {% else %}
                            <img src="{{ asset('assets/img/logo.jpg') }}"
                                 width="250px"
                                 alt="{% trans %}Logo{% endtrans %}"
                                 class="avatar-rounded"
                            />
                        {% endif %}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right profile-dropdown">
                        <a href="{{ path('cli_profil_informations_personnelles') }}" class="dropdown-item notify-item">
                            <i class="fa fa-user"></i>
                            <span>
                                {% trans %}My profile{% endtrans %}
                            </span>
                        </a>
                        <hr>
                        <a href="{{ path('cli_modifier_mdp') }}" class="dropdown-item notify-item">
                            <i class="fa fa-expeditedssl"></i>
                            <span>
                                {% trans %}Password{% endtrans %}
                            </span>
                        </a>
                        <hr>
                        <a href="{{ path('cli_modifier_email') }}" class="dropdown-item notify-item">
                            <i class="fa fa-at"></i>
                            <span>
                                {% trans %}Mail address{% endtrans %}
                            </span>
                        </a>
                        <hr>
                        {#
                        <a href="{{ path('cli_plan') }}" class="dropdown-item notify-item">
                            <i class="fa fa-line-chart"></i>
                            <span>
                                {% trans %}My plan{% endtrans %}
                            </span>
                        </a>
                        <hr>#}
                        <a href="{{ path('cli_deconnexion') }}" class="dropdown-item notify-item">
                            <i class="fa fa-power-off"></i>
                            <span>
                                {% trans %}Logout{% endtrans %}
                            </span>
                        </a>
                    </div>
                </li>
            </ul>
            <ul class="list-inline menu-left mb-0">
                <li class="float-left">
                    <button class="button-menu-mobile open-left">
                        <i class="fa fa-fw fa-bars"></i>
                    </button>
                </li>
            </ul>
        </nav>
    </div>
{# End Navigation #}
