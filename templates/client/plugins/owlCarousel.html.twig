		<script>
			 $(document).ready(function() {
				 var owl = $('.owl-carousel');
				 owl.owlCarousel({
					nav: true,
					margin: 10,
					autoWidth:true,
					responsive:{
					   0:{
					       items:1
					   },
					   600:{
					       items:3
					   },
					   1000:{
					       items:5
					   }
					 }
				 });
				 owl.on('mousewheel', '.owl-stage', function(e) {
					 if (e.deltaY > 0) {
						 owl.trigger('next.owl');
					 } else {
						 owl.trigger('prev.owl');
					 }
					 e.preventDefault();
				 });
			 })
		 </script>
